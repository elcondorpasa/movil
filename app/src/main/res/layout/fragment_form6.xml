<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="65dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="cl.idiem.uchile.dhc.FormularioActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/shadow_background_layout">

        <!-- TÃ­tulo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/section_label"
                android:layout_weight="0.60"
                android:layout_margin="20sp"
                android:text="OTROS ENSAYOS IN SITU"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="@color/colorPrimary50"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_marginBottom="8sp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ensayo Densidad de H.Fresco"
                        android:textColor="#444444"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10sp"/>

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hormigonFresco"
                        android:checked="false"
                        android:textSize="13sp"
                        android:showText="false"
                        android:padding="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="center_vertical"
                    android:weightSum="1"
                    android:clickable="false"
                    android:visibility="gone"
                    android:id="@+id/boxHormigonFresco">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <!-- Campo de Texto | CampoTexto -->
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Volumen del recipiente"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/medidaVolumetrica"
                                android:inputType="numberDecimal|phone"
                                android:hint="Ingrese medida"
                                android:textSize="13sp"
                                android:layout_weight="0.16"/>

                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>

                        <!-- Peso | peso -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masa 1"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/peso"
                                android:textSize="13sp"
                                android:inputType="numberDecimal|phone"
                                android:hint="Ingrese peso"
                                android:layout_weight="0.16"/>

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>
                        <!-- Peso | peso -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masa 2"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/peso2"
                                android:textSize="13sp"
                                android:inputType="numberDecimal|phone"
                                android:hint="Ingrese peso"
                                android:layout_weight="0.16"/>

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>

                        <!-- Densidad H. Fresco | densHorFresco -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Densidad Horm. Fresco"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/densHorFresco"
                                android:inputType="numberDecimal|phone"
                                android:hint="Ingrese densidad"
                                android:layout_weight="0.16"
                                android:textSize="13sp"
                                android:focusable="false"/>

                        </LinearLayout>
                        <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:background="@color/colorAccent50"/>

                        <!-- Balanza | balanza -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balanza"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/balanza"
                                android:inputType="text"
                                android:textSize="13sp"
                                android:hint="Ingrese balanza"
                                android:layout_weight="0.16"/>

                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>

                        <!-- Equipo VOlumnetrico -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medida Volumetrica"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/maquinaVolumetrica"
                                android:inputType="text"
                                android:hint="Ingrese Equipo"
                                android:textSize="13sp"
                                android:layout_weight="0.16"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/colorAccent50"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ensayo Contenido de Aire"
                        android:textColor="#444444"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10sp"/>

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contenidoAire"
                        android:checked="false"
                        android:textSize="13sp"
                        android:showText="false"
                        android:padding="10sp"/>

                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/colorAccent50"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_gravity="center_vertical"
                    android:weightSum="1"
                    android:clickable="false"
                    android:visibility="gone"
                    android:id="@+id/boxDensidadAire">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <!-- Contenido de Aire | contAire -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contenido de Aire"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/contAire"
                                android:textSize="13sp"
                                android:inputType="numberDecimal|phone"
                                android:hint="Ingrese contenido"
                                android:layout_weight="0.16"/>

                        </LinearLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:visibility="visible"
                            android:background="@color/colorAccent50"/>

                        <!-- Aerimetro | aerimetro -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AerÃ­metro"
                                android:textColor="#444444"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/aerimetro"
                                android:textSize="13sp"
                                android:inputType="text"
                                android:hint="Ingrese contenido"
                                android:layout_weight="0.16"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>